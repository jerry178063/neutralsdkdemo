<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_input_bg">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_18"
        android:textColor="@color/normal_font_color"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/size20dp"
        android:text="@string/scan_device_info_put_code"/>

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_below="@id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="@dimen/size15dp"
        android:paddingRight="@dimen/size15dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/et1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/edit_diglog_bg"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size15dp"/>
        <EditText
            android:id="@+id/et2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/edit_diglog_bg"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size15dp"/>
        <EditText
            android:id="@+id/et3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/edit_diglog_bg"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size15dp"/>
        <EditText
            android:id="@+id/et4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/edit_diglog_bg"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/size15dp"/>

    </LinearLayout>
    <View
        android:id="@+id/line"
        style="@style/divider_horizontal_style"
        android:layout_below="@id/layoutContent"
        android:layout_marginTop="@dimen/size15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCanle"
            android:layout_width="0dp"
            android:paddingTop="@dimen/size15dp"
            android:paddingBottom="@dimen/size15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/sleep_deep_color"
            android:gravity="center"
            android:text="@string/cancel"/>

        <View
            style="@style/divider_vertical_style"/>
        <TextView
            android:id="@+id/tvSure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/size15dp"
            android:paddingBottom="@dimen/size15dp"
            android:textColor="@color/sleep_deep_color"
            android:gravity="center"
            android:text="@string/sure"/>
    </LinearLayout>

</RelativeLayout>