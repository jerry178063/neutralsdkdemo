<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:id="@+id/llMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.zhj.bluetooth.sdkdemo.views.ItemToggleLayout
                    android:id="@+id/itMessage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:bottom_line_color="@color/driver_color"
                    app:bottom_line_width="1dp"
                    app:has_bottom_line="true"
                    app:lable_text="Meaasge"
                    app:left_drawable="@mipmap/notice_msg"
                    app:opened="true"
                    app:right_arrow="@mipmap/v_right_s"
                    app:valueTextColor="@color/small_font_color"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.zhj.bluetooth.sdkdemo.views.ItemToggleLayout
                    android:id="@+id/itCall"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="50dp"
                    app:bottom_line_color="@color/driver_color"
                    app:bottom_line_width="1dp"
                    app:has_bottom_line="true"
                    app:lable_text="Call"
                    app:left_drawable="@mipmap/notice_call"
                    app:opened="true"
                    app:right_arrow="@mipmap/v_right_s"
                    app:valueTextColor="@color/small_font_color"/>
            </LinearLayout>
            <com.zhj.bluetooth.sdkdemo.views.ItemToggleLayout
                android:id="@+id/itQQ"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:bottom_line_color="@color/driver_color"
                app:bottom_line_width="1dp"
                app:has_bottom_line="true"
                app:lable_text="QQ"
                app:left_drawable="@mipmap/notice_qq"
                app:opened="true"
                app:right_arrow="@mipmap/v_right_s"
                app:valueTextColor="@color/small_font_color"/>
            <com.zhj.bluetooth.sdkdemo.views.ItemToggleLayout
                android:id="@+id/itFacebook"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:bottom_line_color="@color/driver_color"
                app:bottom_line_width="1dp"
