                app:left_drawable="@mipmap/notice_linkedin"
                app:opened="true"
                app:right_arrow="@mipmap/v_right_s"
                app:valueTextColor="@color/small_font_color"/>
            <com.zhj.bluetooth.sdkdemo.views.ItemToggleLayout
                android:id="@+id/itMessenger"
                android:layout_width="match_parent"
